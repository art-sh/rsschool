{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "max-len": 0,
    "class-methods-use-this": 1,
    "object-curly-spacing": 1,
    "no-restricted-syntax": 1,
    "no-debugger": 1,
    "no-nested-ternary": 1,
    "no-confusing-arrow": 1,
    "no-unused-expressions": 1
  }
}